		<ReadCountMode m="<?JS readmode ?>" />
	</AlignedReadsDataToMismatchesMapper>

	<AlignedReadsDataToCoverageMapper id="-.<?JS id ?>.coveragenn" input="-.<?JS id ?>.data">
